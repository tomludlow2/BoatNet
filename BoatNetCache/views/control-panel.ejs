<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Control Panel</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            padding: 20px;
        }
        h1 {
            color: #333;
        }
        .button {
            display: inline-block;
            padding: 10px 20px;
            margin: 10px;
            font-size: 16px;
            color: white;
            background-color: blue;
            border: none;
            border-radius: 5px;
            text-decoration: none;
        }
        .button.red {
            background-color: red;
        }
    </style>
</head>
<body>
    <h1>BoatNetCache Control Panel</h1>

    <% for (const [key, source] of Object.entries(sources)) { %>
        <div class="cache-section">
            <h2><%= source.label %></h2>
            <p>Articles Cached: <strong><%= cacheDetails[key].totalArticles %></strong></p>
            <p>Cache Age: <strong><%= cacheDetails[key].cacheAge %></strong></p>
            <p>Folder Size: <strong><%= cacheDetails[key].folderSize %></strong></p>
            <a href="/refresh-cache/<%= key %>" class="button">Refresh <%= source.label %> Cache</a>
            <a href="/clear-cache/<%= key %>" class="button red">Clear <%= source.label %> Cache</a>
        </div>
    <% } %>
</body>
</html>
